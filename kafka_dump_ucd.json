{
  "version": 12,
  "components": [
    {
      "name": "Kafka-Dump-Utility",
      "description": "Secure Kafka Topic Dump Utility with encryption and Artifactory upload.",
      "template": true,
      "importAutomatically": false,
      "useVfs": false,
      "properties": [
        {
          "name": "INC_NUMBER",
          "label": "INC Number",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "REQ_NUMBER",
          "label": "REQ Number",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "BOOTSTRAP_SERVERS",
          "label": "Kafka Bootstrap Servers",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "KAFKA_TOPIC",
          "label": "Kafka Topic",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "OTP_PASSWORD",
          "label": "One-Time Password",
          "type": "SECURE",
          "required": true
        },
        {
          "name": "ARTIFACTORY_USER",
          "label": "Artifactory User",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "ARTIFACTORY_PASSWORD",
          "label": "Artifactory Password",
          "type": "SECURE",
          "required": true
        },
        {
          "name": "CLUSTER_NAME",
          "label": "Cluster (optional)",
          "type": "TEXT",
          "required": false,
          "value": ""
        },
        {
          "name": "ENVIRONMENT_NAME",
          "label": "Environment (optional)",
          "type": "TEXT",
          "required": false,
          "value": ""
        },
        {
          "name": "REQUESTOR",
          "label": "Requestor User",
          "type": "TEXT",
          "required": true,
          "value": ""
        },
        {
          "name": "ARTIFACTORY_BASE_URL",
          "label": "Artifactory Base URL",
          "type": "TEXT",
          "required": true,
          "value": ""
        }
      ],
      "componentProcesses": [
        {
          "name": "run_kafka_dump",
          "description": "Run the Kafka dump script with provided parameters.",
          "defaultWorkingDir": "${p:resource/work.dir}",
          "inventoryActionType": "NONE",
          "steps": [
            {
              "type": "com.urbancode.plugin.script:script",
              "name": "Execute kafka_dump.sh",
              "scriptBody": "#!/bin/bash\n\nexport ARTIFACTORY_BASE_URL=\"${p:ARTIFACTORY_BASE_URL}\"\nexport ARTIFACTORY_USER=\"${p:ARTIFACTORY_USER}\"\nexport ARTIFACTORY_PASSWORD=\"${p:ARTIFACTORY_PASSWORD}\"\n\nchmod +x ${p:component.workspace}/scripts/kafka_dump.sh\n\n${p:component.workspace}/scripts/kafka_dump.sh \\\n  --inc \"${p:INC_NUMBER}\" \\\n  --req \"${p:REQ_NUMBER}\" \\\n  --bootstrap \"${p:BOOTSTRAP_SERVERS}\" \\\n  --cluster \"${p:CLUSTER_NAME}\" \\\n  --env \"${p:ENVIRONMENT_NAME}\" \\\n  --topic \"${p:KAFKA_TOPIC}\" \\\n  --otp \"${p:OTP_PASSWORD}\" \\\n  --requestor \"${p:REQUESTOR}\"",
              "shell": "bash",
              "commandPath": "",
              "workingDir": "${p:resource/work.dir}"
            }
          ]
        }
      ]
    }
  ]
}
